<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetallesClienteFragment">

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#E9E9E9"
        tools:context=".DetallesClienteFragment"
        >

        <RelativeLayout
            android:id="@+id/topbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginHorizontal="20dp"
            android:paddingVertical="10dp"
            android:background="@drawable/background_circle"
            >

            <TextView
                android:id="@+id/txtTitulo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Detalles del Cliente"
                android:textSize="22sp"
                android:textColor="#ffffff"
                android:layout_marginLeft="20dp"
                android:layout_centerVertical="true"
                android:textStyle="bold"
                />

            <ImageView
                android:id="@+id/IconUser"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerVertical="true"
                android:src="@drawable/icon_cliente"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"
                />

        </RelativeLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/topbar"
            >

            <LinearLayout
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center_horizontal"
                >

                <TextView
                    android:id="@+id/txtPersonales"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Datos Personales"
                    android:textSize="32sp"
                    android:textColor="@color/secondary_color"
                    android:textStyle="bold"
                    android:layout_marginBottom="20dp"
                    android:layout_marginTop="20dp"

                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nombre(s):"
                    android:textColor="@color/primary_color"
                    android:textStyle="bold"
                    android:textSize="16dp"
                    android:layout_marginBottom="10dp"/>

                <EditText
                    android:id="@+id/campoNombre"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="Nombre(s)"
                    android:inputType="textPersonName"
                    android:textColor="#1D2262"
                    android:paddingVertical="12dp"
                    android:paddingHorizontal="20dp"
                    android:background="@drawable/border_edittext_background"
                    android:layout_gravity="center"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Apellido Paterno:"
                    android:textColor="@color/primary_color"
                    android:textStyle="bold"
                    android:textSize="16dp"
                    android:layout_marginTop="25dp"
                    android:layout_marginBottom="10dp"
                    />


                <EditText
                    android:id="@+id/campoAppat"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="Apellido Paterno"
                    android:inputType="textPersonName"
                    android:textColor="#1D2262"
                    android:paddingVertical="12dp"
                    android:paddingHorizontal="20dp"
                    android:background="@drawable/border_edittext_background"
                    android:layout_gravity="center"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Apellido Materno:"
                    android:textColor="@color/primary_color"
                    android:textStyle="bold"
                    android:textSize="16dp"
                    android:layout_marginTop="25dp"
                    android:layout_marginBottom="10dp"
                    />

                <EditText
                    android:id="@+id/campoAmat"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="Apellido Materno"
                    android:inputType="textPersonName"
                    android:textColor="#1D2262"
                    android:paddingVertical="12dp"
                    android:paddingHorizontal="20dp"
                    android:background="@drawable/border_edittext_background"
                    android:layout_gravity="center"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Fecha de Nacimiento:"
                    android:textColor="@color/primary_color"
                    android:textStyle="bold"
                    android:textSize="16dp"
                    android:layout_marginTop="25dp"
                    android:layout_marginBottom="10dp"
                    />


                <EditText
                    android:id="@+id/campoFecha"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="Fecha de Nacimiento: dd/mm/yyyy"
                    android:inputType="date"
                    android:textColor="#1D2262"
                    android:paddingVertical="12dp"
                    android:paddingHorizontal="20dp"
                    android:background="@drawable/border_edittext_background"
                    android:layout_gravity="center"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Correo Electronico:"
                    android:textColor="@color/primary_color"
                    android:textStyle="bold"
                    android:textSize="16dp"
                    android:layout_marginTop="25dp"
                    android:layout_marginBottom="10dp"
                    />

                <EditText
                    android:id="@+id/campoCorreo"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="Correo Electronico"
                    android:inputType="textEmailAddress"
                    android:textColor="#1D2262"
                    android:paddingVertical="12dp"
                    android:paddingHorizontal="20dp"
                    android:background="@drawable/border_edittext_background"
                    android:layout_gravity="center"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Número de Teléfono:"
                    android:textColor="@color/primary_color"
                    android:textStyle="bold"
                    android:textSize="16dp"
                    android:layout_marginTop="25dp"
                    android:layout_marginBottom="10dp"
                    />

                <EditText
                    android:id="@+id/campoNumero"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="Número de Teléfono"
                    android:inputType="phone"
                    android:textColor="#1D2262"
                    android:paddingVertical="12dp"
                    android:paddingHorizontal="20dp"
                    android:background="@drawable/border_edittext_background"
                    android:layout_gravity="center"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="RFC:"
                    android:textColor="@color/primary_color"
                    android:textStyle="bold"
                    android:textSize="16dp"
                    android:layout_marginTop="25dp"
                    android:layout_marginBottom="10dp"
                    />

                <EditText
                    android:id="@+id/campoRFC"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="RFC"
                    android:inputType="text"
                    android:textColor="#1D2262"
                    android:paddingVertical="12dp"
                    android:paddingHorizontal="20dp"
                    android:background="@drawable/border_edittext_background"
                    android:layout_gravity="center"
                    />

                <TextView
                    android:id="@+id/txtDireccion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Dirección"
                    android:textSize="32sp"
                    android:textColor="@color/secondary_color"
                    android:textStyle="bold"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Calle:"
                    android:textColor="@color/primary_color"
                    android:textStyle="bold"
                    android:textSize="16dp"
                    android:layout_marginTop="25dp"
                    android:layout_marginBottom="10dp"
                    />

                <EditText
                    android:id="@+id/campoCalle"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="Calle"
                    android:inputType="text"
                    android:textColor="#534B85"
                    android:paddingVertical="12dp"
                    android:paddingHorizontal="20dp"
                    android:layout_gravity="center"
                    android:background="@drawable/border_edittext_background"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginTop="25dp"
                    android:layout_marginBottom="10dp"
                    >

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.45"
                        android:text="Num.Int:"
                        android:textColor="@color/primary_color"
                        android:textStyle="bold"
                        android:textSize="16dp"
                        />

                    <Space
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.1" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.45"
                        android:text="Num.Ext:"
                        android:textColor="@color/primary_color"
                        android:textStyle="bold"
                        android:textSize="16dp"
                        />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <EditText
                        android:id="@+id/campoNumInt"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.45"
                        android:ems="10"
                        android:hint="N. Interior"
                        android:inputType="text"
                        android:textColor="#534B85"
                        android:paddingVertical="12dp"
                        android:paddingHorizontal="20dp"
                        android:background="@drawable/border_edittext_background"
                        />

                    <Space
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.1" />

                    <EditText
                        android:id="@+id/campoNumExt"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.45"
                        android:ems="10"
                        android:hint="N. Exterior"
                        android:inputType="text"
                        android:textColor="#534B85"
                        android:paddingVertical="12dp"
                        android:paddingHorizontal="20dp"
                        android:layout_alignParentRight="true"
                        android:background="@drawable/border_edittext_background"
                        />

                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Colonia:"
                    android:textColor="@color/primary_color"
                    android:textStyle="bold"
                    android:textSize="16dp"
                    android:layout_marginTop="25dp"
                    android:layout_marginBottom="10dp"
                    />

                <EditText
                    android:id="@+id/campoColonia"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="Colonia"
                    android:inputType="text"
                    android:textColor="#534B85"
                    android:paddingVertical="12dp"
                    android:paddingHorizontal="20dp"
                    android:layout_gravity="center"
                    android:background="@drawable/border_edittext_background"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Estado:"
                    android:textColor="@color/primary_color"
                    android:textStyle="bold"
                    android:textSize="16dp"
                    android:layout_marginTop="25dp"
                    android:layout_marginBottom="10dp"
                    />


                <EditText
                    android:id="@+id/campoEstado"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="Estado"
                    android:inputType="text"
                    android:textColor="#534B85"
                    android:paddingVertical="12dp"
                    android:paddingHorizontal="20dp"
                    android:background="@drawable/border_edittext_background"
                    android:layout_gravity="center"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="CP:"
                    android:textColor="@color/primary_color"
                    android:textStyle="bold"
                    android:textSize="16dp"
                    android:layout_marginTop="25dp"
                    android:layout_marginBottom="10dp"
                    />

                <EditText
                    android:id="@+id/campoCP"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="Código Postal"
                    android:inputType="number"
                    android:textColor="#534B85"
                    android:paddingVertical="12dp"
                    android:paddingHorizontal="20dp"
                    android:layout_gravity="center"
                    android:background="@drawable/border_edittext_background"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TP Propiedad:"
                    android:textColor="@color/primary_color"
                    android:textStyle="bold"
                    android:textSize="16dp"
                    android:layout_marginTop="25dp"
                    android:layout_marginBottom="10dp"
                    />

                <EditText
                    android:id="@+id/campoTpPropiedad"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="TP Propiedad"
                    android:layout_marginBottom="25dp"
                    android:inputType="text"
                    android:textColor="#534B85"
                    android:paddingVertical="12dp"
                    android:paddingHorizontal="20dp"
                    android:layout_gravity="center"
                    android:background="@drawable/border_edittext_background"
                    />

                <LinearLayout
                    android:id="@+id/botones"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="20dp">

                    <Button
                        android:id="@+id/btnEliminar"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.45"
                        android:backgroundTint="@color/primary_color"
                        android:textSize="13dp"
                        android:text="Eliminar Cliente" />

                    <Space
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.1" />

                    <Button
                        android:id="@+id/btnGuardar"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.45"
                        android:backgroundTint="@color/primary_color"
                        android:textSize="13dp"
                        android:text="Guardar Cambios" />

                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </RelativeLayout>
</FrameLayout>