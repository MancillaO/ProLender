<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/background">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <ImageView
                android:id="@+id/icono"
                android:layout_width="wrap_content"
                android:layout_height="300dp"
                android:layout_marginTop="40dp"
                android:src="@drawable/icono"
                android:layout_centerHorizontal="true"
                />

            <TextView
                android:id="@+id/text1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bienvenido"
                android:textSize="21sp"
                android:layout_marginTop="5dp"
                android:layout_centerHorizontal="true"
                android:textColor="#ffffff"
                android:layout_below="@id/icono"/>

            <TextView
                android:id="@+id/text2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Iniciar sesiÃ³n"
                android:textSize="30sp"
                android:layout_centerHorizontal="true"
                android:textColor="#ffffff"
                android:layout_below="@id/text1"
                android:textStyle="bold"/>

            <EditText
                android:id="@+id/email"
                android:layout_width="300dp"
                android:layout_centerHorizontal="true"
                android:layout_height="wrap_content"
                android:ems="10"
                android:layout_below="@id/text2"
                android:hint="Email"
                android:textStyle="bold"
                android:layout_marginTop="50dp"
                android:inputType="textEmailAddress"
                android:padding="17dp"
                android:paddingLeft="40dp"
                android:background="@drawable/rounded_edittext_background"
                android:textColorHint="#9995A8"
                android:textColor="#000000"
                />

            <EditText
                android:id="@+id/password"
                android:layout_width="300dp"
                android:layout_centerHorizontal="true"
                android:layout_height="wrap_content"
                android:ems="10"
                android:layout_below="@id/email"
                android:hint="Password"
                android:textStyle="bold"
                android:layout_marginTop="10dp"
                android:inputType="textPassword"
                android:padding="17dp"
                android:paddingLeft="40dp"
                android:background="@drawable/rounded_edittext_background"
                android:textColorHint="#9995A8"
                android:textColor="#000000"

                />

            <Button
                android:id="@+id/btnContinuar"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:text="Continuar"
                android:onClick="onClick"
                android:backgroundTint="@color/secondary_color"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:textColor="#ffffff"
                android:layout_below="@id/password"
                android:textSize="16dp"
                android:padding="15dp"/>

            <LinearLayout
                android:id="@+id/lineas"
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_below="@id/btnContinuar"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30dp">

                <View
                    android:id="@+id/line1"
                    android:layout_width="0dp"
                    android:layout_height="2dp"
                    android:layout_weight=".40"
                    android:layout_below="@id/btnContinuar"
                    android:background="#ffffff"
                    />

                <Space
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.05" />

                <TextView
                    android:id="@+id/text3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".10"
                    android:text="O"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:textColor="#ffffff"
                    android:gravity="center_horizontal"
                    />

                <Space
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.05" />

                <View
                    android:id="@+id/line2"
                    android:layout_width="0dp"
                    android:layout_height="2dp"
                    android:layout_weight=".40"
                    android:layout_below="@id/btnContinuar"
                    android:background="#ffffff"
                    />

            </LinearLayout>

            <Button
                android:id="@+id/btnCrear"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:text="Crear Cuenta"
                android:onClick="onClick"
                android:backgroundTint="#3CE1E1E1"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="30dp"
                android:textColor="#ffffff"
                android:layout_below="@id/lineas"
                android:textSize="16dp"
                android:padding="15dp"/>


        </RelativeLayout>

    </ScrollView>

</RelativeLayout>
